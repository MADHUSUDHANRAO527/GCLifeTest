<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/flatDetailsLay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/avenueLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" >

            <Spinner
                android:id="@+id/avenueSpin"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:spinnerMode="dialog" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line11"
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:background="#ccc"
            android:orientation="horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/societyLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" >

            <Spinner
                android:id="@+id/societySpin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:spinnerMode="dialog" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line111"
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:background="#ccc"
            android:orientation="horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buildingLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" >

            <Spinner
                android:id="@+id/buildingSpin"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:spinnerMode="dialog" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line22"
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:background="#ccc"
            android:orientation="horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flatNoLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:gravity="left" >

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/flatNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                float:fletPadding="5dp" >

                <EditText
                    android:id="@+id/flatNoEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="true"
                    android:gravity="left"
                    android:hint="Flat Number"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:background="#ccc"
            android:orientation="horizontal" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp" >

            <TextView
                android:id="@+id/cancellTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="22dp"
                android:layout_toLeftOf="@+id/submitTxt"
                android:padding="5dp"
                android:text="CANCEL"
                android:textColor="#4169E1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/submitTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"
                android:padding="5dp"
                android:text="SUBMIT"
                android:textColor="#4169E1"
                android:textSize="16sp" />

            <mobile.gclifetest.MaterialDesign.ProgressBarCircularIndeterminate
                android:id="@+id/pDialog"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="33dp"
                android:layout_marginTop="22dp"
                android:background="#1E88E5"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>